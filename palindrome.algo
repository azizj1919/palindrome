ALGORITHM palindrome
VAR
    s : STRING;
BEGIN
 s:=palindrome(s); 
END




FUNCTION test(var s:INTEGER) : BOOLEAN;
VAR
    s:string;
    test:BOOLEAN;
BEGIN
    IF (s[1]=s[length.s] OR length.s<=1) THEN
    test:=true;
        s:=palindrome(Copy (s , 2 , length.s-1) );
        
    ELSE
       test:=false;
        END_IF


    RETURN test ;
END